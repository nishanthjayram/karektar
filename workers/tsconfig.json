{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2022",
		"lib": ["ES2020"],
		"types": ["@cloudflare/workers-types"],
		"moduleResolution": "node",
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"paths": {
			"@common/*": ["../common/*"]
		}
	},
	"include": ["src/**/*", "../common/**/*"]
}
