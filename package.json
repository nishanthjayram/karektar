{
  "name": "karektar",
  "private": true,
  "workspaces": [
    "frontend",
    "workers"
  ],
  "scripts": {
    "dev:frontend": "npm run dev -w frontend -- --host",
    "dev:workers": "npm run dev -w workers",
    "dev": "npm-run-all --parallel dev:frontend dev:workers",
    "build": "cd frontend && npm install && npm run build",
    "deploy": "cd workers && npm install && npm run deploy"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3",
    "wrangler": "^3.107.0"
  }
}
